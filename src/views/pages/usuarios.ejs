<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/login/head_login'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/login/header'); %>
    </header>
    <section id="hero">
        <!-- Hero-content-section-end -->
    </section>
    <!-- Navigation-end -->
    <!-- Hero-content-section-start -->
    <div class="container">
        <div class="hero_container">
            <div class="hero_content">
                <h1 class="section-heading">Bienvenidos a XCRIT</h1>
                <p class="text-light">ESTAMOS VIENDO A LOS USUARIOS</p>
                <p class="text-light1">USUARIOS.</p>
                <br>
                <a href="#!" class="cta_btn">USUARIOS</a>
            </div>
            <div class="hero_image">
                <img src="yolin_logo.png" alt="Image" class="hero-img">
            </div>
        </div>
    </div>
    </section>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                </tr>
            </thead>
            <tbody>
                <% if(arrayUsuarios.length > 0){%>
                    <% arrayUsuarios.forEach(usuario => { %>
                        <tr>
                            <th scope="row">
                                <%= usuario.id %>
                            </th>
                            <td>
                                <%= usuario.nombre %>
                            </td>
                            <td>
                                <%= usuario.descripcion %>
                            </td>
                            <td>@mdo</td>
                        </tr>
                        <% }) %>
                            <% } %>
            </tbody>
        </table>

    </div>



    <footer>
        <%- include('../partials/login/footer'); %>
    </footer>

</body>

</html>